#!/usr/bin/env node

const program = require('commander');
const mkdirpSync = require('fs-extra').mkdirpSync;
const join = require('path').join;
const existsSync = require('fs').existsSync;
const chalk = require('chalk');
const error = chalk.red;

program
  .usage('[options] commandName')
  .parse(process.argv);

if (!program.args[0]) {
  program.help();
} else {
  const dest = join(process.cwd(), 'build');
  if (!existsSync(dest)) {
    console.error(error('No build folder'));
    process.exit(1);
  }
  require('../lib/run')(program);
}
