#!/usr/bin/env node

const join = require('path').join;
const program = require('commander');

if (process.argv.slice(2).join('') === '-v') {
  console.log('wci-cli: ' + require('../package').version);
  return;
}

console.log(process.argv);

console.log('=================================');

console.log(process.argv.slice(3));

program
  .usage('run [options]')
  .on('--help', printHelp)
  .parse(process.argv);


function printHelp() {
  console.log('  options:');
  console.log();
  console.log('    start           Start a development environment');
  console.log('    test            Build the test environment code');
  console.log('    dist            Build the production environment code');
  console.log();
  console.log('  All commands can be run with -h (or --help) for more information.')
}
